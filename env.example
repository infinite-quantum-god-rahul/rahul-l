# SML777 Environment Variables for Render Deployment
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=your-app-name.onrender.com

# Database (Render will provide DATABASE_URL automatically)
# DATABASE_URL=postgresql://user:password@host:port/database

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Static Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Media Files
MEDIA_URL=/media/
MEDIA_ROOT=media

# SML Feature Flags
SML_FEATURES_CREDIT_BUREAU=True
SML_FEATURES_NPA_DASHBOARD=True
SML_FEATURES_OFFLINE_KYC=True
SML_FEATURES_ESCALATION_ALERTS=True
SML_FEATURES_SMS=True
SML_FEATURES_PAYMENTS=True
SML_FEATURES_BORROWER_PORTAL=True

# Credit Bureau Configuration
SML_BUREAU_PROVIDER=CIBIL
CIBIL_BASE_URL=
CIBIL_API_KEY=
CRIF_BASE_URL=
CRIF_API_KEY=

# Payment Provider (Razorpay)
RAZORPAY_PROVIDER=RAZORPAY
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Alert Channels
ALERT_FROM_EMAIL=
ALERT_SMTP_URL=
ALERT_SMS_URL=
ALERT_SMS_KEY=
ALERT_WEBHOOK_URL=

# Monitoring (Optional)
SENTRY_DSN=

# Redis (Optional - for caching)
REDIS_URL=

# Email Configuration (Optional)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=


